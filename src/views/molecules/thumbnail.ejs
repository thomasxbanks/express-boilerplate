<article 
  class="thumbnail" 
  data-target="<%= button.target %>" 
  data-container="<%= container %>" 
  data-state="<% if (slug === site.page.slug) { %>is-active<% } else { %>not-active<% } %>"
>
  <span class="image_container">
    <%if (flag.new == true) { %>
      <%- include(site.views + '/atoms/flag-new') %>
    <% } %>
    <img src="<%= image.url %>" alt="<%= image.alt %>">  
  </span>
  
  <header>
    <div class="content">
      <h2 class="title"><%= title %></h2>
      <p class="description"><%= description %></p>
      </div>
      <%- include(site.views + '/atoms/buttons/button-icon-only', {type: 'button', action: 'retrieveGameDetails("'+button.target+'", '+container+')', text: button.text, icon: button.icon, theme: 'light'}) %>
  </header>
</article>
