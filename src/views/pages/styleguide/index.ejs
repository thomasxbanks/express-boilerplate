	</section>

	<section data-title="breadcrumbs" id="styleguide-breadcrumbs">
		<section class="grid grid-central">
			<%- include(site.views + '/organisms/breadcrumbs', 
				{breadcrumbs: [
					{link: '/', text: 'Home'}, 
					{link: '/section', text: 'Section'}, 
					{link: '/slug', text: 'Page'}
				]}
			) %>
		</section>
	</section>

	<section data-title="Form" id="styleguide-admin-input-form" class="admin">
		<section class="admin-panel-with-sidebar grid-central">
				<form action="/" method="post">
					<%- include(site.views + '/atoms/inputs/input-checkbox-icon', input.checkboxicon) %>
`					<%- include(site.views + '/atoms/inputs/input-checkbox', input.checkbox) %>
					<%- include(site.views + '/atoms/inputs/input-date', input.date) %>
					<%- include(site.views + '/atoms/inputs/input-email', input.email) %>
					<%- include(site.views + '/atoms/inputs/input-image', input.image) %>
					<%- include(site.views + '/atoms/inputs/input-number', input.number) %>
					<%- include(site.views + '/atoms/inputs/input-password', input.password) %>
					<%- include(site.views + '/atoms/inputs/input-pdf', input.pdf) %>
					<%- include(site.views + '/atoms/inputs/input-radio', input.radio) %>
					<%- include(site.views + '/atoms/inputs/input-range', input.range) %>
					<%- include(site.views + '/atoms/inputs/input-select', input.select) %>
					<%- include(site.views + '/atoms/inputs/input-text', input.text) %>
					<%- include(site.views + '/atoms/inputs/input-textarea', input.textarea) %>
					<%- include(site.views + '/atoms/inputs/input-toggle', input.toggle) %>
					<%- include(site.views + '/atoms/inputs/input-url', input.url) %>
				</form>
		</section>
	</section>