<%- contentFor('hero') %>
	<%- include(site.views + '/organisms/hero', 
		{
			image: {
				url: {
					mobile: {
						small: '/img/midnight-lake-mobile@1x.jpg',
						large: '/img/midnight-lake-mobile@2x.jpg'
					},
					desktop: {
						small: '/img/midnight-lake-desktop@1x.jpg',
						large: '/img/midnight-lake-desktop@2x.jpg'
					}
				}, 
				alt: 'A lake at midnight', 
			},
			title: site.page.body.title, 
			content: 'All of the component elements can be found here' }) %>

<%- contentFor('body') %>
	<section data-title="Links" id="styleguide-links">
		<%- include(site.views + '/atoms/link', {link: '/styleguide', text: 'Primary Nav Link', style: 'primary-nav', restricted: false}) %>
		<%- include(site.views + '/atoms/link', {link: '/styleguide', text: 'Primary Nav Link (Restricted)', style: 'primary-nav', restricted: true}) %>
	</section>

	<section data-title="Buttons (Primary)" id="styleguide-buttons-primary">
		<%- include(site.views + '/atoms/buttons/button-primary', {type: 'button', action: 'log("Primary")', text: 'Primary Button Brand', theme: 'brand'}) %>
		<%- include(site.views + '/atoms/buttons/button-primary', {type: 'button', action: 'log("Primary")', text: 'Primary Button Dark', theme: 'dark'}) %>
		<%- include(site.views + '/atoms/buttons/button-primary', {type: 'button', action: 'log("Primary")', text: 'Primary Button Light', theme: 'light'}) %>
	</section>

	<section data-title="Buttons (Secondary)" id="styleguide-buttons-secondary">
		<%- include(site.views + '/atoms/buttons/button-secondary', {type: 'button', action: 'log("Secondary")', text: 'Secondary Button Brand', theme: 'brand'}) %>
		<%- include(site.views + '/atoms/buttons/button-secondary', {type: 'button', action: 'log("Secondary")', text: 'Secondary Button Dark', theme: 'dark'}) %>
		<%- include(site.views + '/atoms/buttons/button-secondary', {type: 'button', action: 'log("Secondary")', text: 'Secondary Button Light', theme: 'light'}) %>
	</section>

	<section data-title="Buttons (Secondary with Icon)" id="styleguide-buttons-secondary-icon">
		<%- include(site.views + '/atoms/buttons/button-secondary_icon', {type: 'button', action: 'log("Secondary with Icon")', text: 'Secondary Button Icon Brand', theme: 'brand', icon: 'arrow'}) %>
		<%- include(site.views + '/atoms/buttons/button-secondary_icon', {type: 'button', action: 'log("Secondary with Icon")', text: 'Secondary Button Icon Dark', theme: 'dark', icon: 'plus'}) %>
		<%- include(site.views + '/atoms/buttons/button-secondary_icon', {type: 'button', action: 'log("Secondary with Icon")', text: 'Secondary Button Icon Light', theme: 'light', icon: 'check'}) %>
	</section>

	<section data-title="Buttons (Icon only)" id="styleguide-buttons-icon-only">
		<%- include(site.views + '/atoms/buttons/button-icon-only', {type: 'button', action: 'log("log in")', text: 'Log in', icon: 'plus', theme: 'brand'}) %>
		<%- include(site.views + '/atoms/buttons/button-icon-only', {type: 'button', action: 'log("share stuff")', text: 'Share something', icon: 'hamburger', theme: 'dark'}) %>
		<%- include(site.views + '/atoms/buttons/button-icon-only', {type: 'button', action: 'log("expand thumbnail")', text: 'Expand the thumbnail', icon: 'close', theme: 'light'}) %>
	</section>
	
	<section data-title="Buttons (Ghost)" id="styleguide-buttons-ghost">
		<%- include(site.views + '/atoms/buttons/button-ghost', {type: 'button', action: 'log("Ghost")', text: 'Ghost Button Brand', theme: 'brand'}) %>
		<%- include(site.views + '/atoms/buttons/button-ghost', {type: 'button', action: 'log("Ghost")', text: 'Ghost Button Dark', theme: 'dark'}) %>
		<%- include(site.views + '/atoms/buttons/button-ghost', {type: 'button', action: 'log("Ghost")', text: 'Ghost Button Light', theme: 'light'}) %>
	</section>

	<section data-title="Teasers" id="styleguide-teasers" class="section-theme-light">
		<div class="grid grid-central">
			<h3 class="section-title item-12-12">What's new</h3>
			<section class="teaser_container item-12-12">
				<% articles = [
					{style: 'small', image: {url: 'http://fillmurray.com/300/200', alt: 'Bill Murray'}, title: 'Is Bill Murray better than Nicolas Cage?', content: '', link: '/news-events/bill-murray-better-cage'},
					{style: 'small', image: {url: 'http://fillmurray.com/300/210', alt: 'Bill Murray'}, title: 'Turning Japanese: Bill Murray on set', content: '', link: '/news-events/lost-in-translation'},
					{style: 'small', image: {url: 'http://fillmurray.com/300/220', alt: 'Bill Murray'}, title: 'Anecdotes of a legend', content: '', link: '/news-events/anecdotes'},
					{style: 'small', image: {url: 'http://fillmurray.com/300/230', alt: 'Bill Murray'}, title: 'Is Nicolas Cage better than Bill Murray?', content: '', link: '/news-events/nicolas-cage-better-bill-murray'}
				] %>
				<% for (article of articles) { %>
					<%- include(site.views + '/molecules/teaser', article) %>
				<% } %>
			</section>
		</div>
	</section>
	
	<section data-title="Search Bar" id="styleguide-search-bar">
		<%- include(site.views + '/atoms/search-bar') %>
	</section>

	<section data-title="Modal" id="styleguide-modal">
		<%- include(site.views + '/atoms/buttons/button-primary', {type: 'button', action: 'openModal()', text: 'Open the modal', theme: 'dark'}) %>
